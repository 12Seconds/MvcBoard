@{
    var BoardTitle = "자유 게시판"; // Category 값에 따라 변경 필요 (Controller 에서 변경된 상태로 넘겨주거나)

    ViewData["Title"] = Model.PostData.Title; // TODO 게시물 제목 넘기기
}

<link rel="stylesheet" href="@(Url.Content("~/css/community/view.css"))" />

<div class="community">

    <aside class="community_aside_left">

        <div class="user_info">
